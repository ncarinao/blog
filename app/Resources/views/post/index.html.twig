{% extends 'base.html.twig' %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="col-md-12">

                <div class="header">
                    <h4 class="title font-weight-bold text-center text-white">Art√≠culos</h4>
                    <br>
                </div>

                <div class="row">
                    {% for post in posts %}
                        <a class="col-md-3 " style="text-decoration: none; margin-bottom: 20px" href="{{ path('admin_posts_show', { 'id': post.id }) }}">
                            <div class="card border-info bg-info">
                                <div class="card-body">
                                <h5 class="text-center font-weight-bold text-white">{{ post.title }}</h5>
                                </div>
                            </div>
                        </a>

                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <a class="btn btn-info btn-fill btn-wd" href="{{ path('admin_posts_new') }}">Nuevo Post</a>

                    </div>
                </div>


            </div>
        </div>
    </div>

{% endblock %}